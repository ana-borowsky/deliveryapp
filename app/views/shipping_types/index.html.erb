<section class='page-layout'>
<h2>Modalidades de Transporte</h2>
<% if current_user.admin? %>
  <%= link_to 'Adicionar nova modalidade de transporte', new_shipping_type_path, class: 'button' %>
<% end %>
<div class="list">
<% @shipping_types.each do |s| %>
  <div class="list-item">
    <h3><%= link_to(s.name, shipping_type_path(s.id)) %> </h3>
      <dl>
        <dt><img src=<%= image_path('arrow-down.svg') %>>Distância mínima: <%= s.minimum_distance %>km</dt>
        <dt><img src=<%= image_path('arrow-up.svg') %>>Distância máxima: <%= s.maximum_distance %>km
        <dt><img src=<%= image_path('arrow-down-circle.svg') %>>Peso mínimo: <%= s.minimum_weight/100 %>kg
        <dt><img src=<%= image_path('arrow-up-circle.svg') %>>Peso máximo: <%= s.maximum_weight/100 %>kg
        <dt><img src=<%= image_path('dollar-sign.svg') %>>Taxa: <%= number_to_currency(s.fee/100.to_f) %>
        <dt><img src=<%= image_path('bar-chart-2.svg') %>>Ativada: <%= I18n.translate(s.active.to_s) %></dt>
      <dl>
    </div>
<% end %>
</div>

<% if @shipping_types.empty? %>
  <p> Não existem modalidades de serviço cadastradas. </p>
<% end %>
</section>

