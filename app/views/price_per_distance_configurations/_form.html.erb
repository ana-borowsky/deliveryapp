<%= form_with(model: @price_per_distance_configuration) do |f| %>
  <div>
    <%= f.label :minimum_distance, 'Distância mínima:' %>
    <%= f.number_field :minimum_distance %>
  </div>
    <div>
    <%= f.label :maximum_distance, 'Distância máxima:' %>
    <%= f.number_field :maximum_distance %>
  </div>
    <div>
    <%= f.label :price_per_distance, 'Preço:' %>
    <%= f.number_field :price_per_distance %>
  </div>
    <div>
    <%= f.label :shipping_type_id, 'Modalidade de transporte:' %>
    <%= f.select :shipping_type_id, PricePerDistanceConfiguration.shipping_types_for_select %><br>
  </div>
  <div>
    <br><%= f.submit 'Salvar' %>
  </div>
<% end %>