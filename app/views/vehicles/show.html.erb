<section class='page-layout'>
<h2>Veículo: <%= @vehicle.manufacturer %> <%= @vehicle.model %> - <%= @vehicle.license_plate %> </h2>
<div class='page-title-two-buttons'>
  <%= link_to 'Voltar', vehicles_path, class: 'button' %>
  <% if current_user.admin? %>
    <%= link_to 'Editar', edit_vehicle_path(@vehicle.id), class: 'button' %>
  <% end %>
</div>
<div>
  Ano de fabricação: <%= @vehicle.year %><br>
  Capacidade de carga: <%= @vehicle.load_capacity/100 %>kg<br>
  Em manutenção:  <%= I18n.translate(@vehicle.maintenance) %><br>
  Disponível: <%= I18n.translate(@vehicle.available && !@vehicle.maintenance) %><br>
</div>
</section>
