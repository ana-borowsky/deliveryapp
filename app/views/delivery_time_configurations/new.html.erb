<section class='page-layout'>
  <% if(@delivery_time_configuration.errors.any?) %>
    <p>Verifique os erros abaixo:</p>
    <ul>
      <% @delivery_time_configuration.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <h2>Nova configuração de prazo</h2>
  <div class='page-title'>
    <%= link_to 'Voltar', delivery_time_configurations_path, class: 'button' %>
  </div>
  <%= render 'form' %>
</section>


